{
  "name": "real-debrid-uptime",
  "version": "1.0.0",
  "description": "Real-Debrid API and streaming uptime monitor",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:frontend": "cd frontend && npm run build",
    "build:all": "npm run build && npm run build:frontend",
    "start": "node dist/index.js",
    "dev": "tsc && concurrently -k \"tsc --watch\" \"node --watch dist/index.js\""
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": ["real-debrid", "uptime", "monitor"],
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.0"
  }
}
